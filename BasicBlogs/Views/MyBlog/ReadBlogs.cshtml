@model List<BasicBlogs.Models.MyBlog>

<div class="container">
    <div class="d-flex justify-content-end mb-4">
        <a class="btn btn-success" asp-controller="MyBlog" asp-action="CreateAddBlogs"><i class="bi bi-plus-circle"></i> Create New Blog</a>
    </div>

    <div class="row">
        @foreach (var blog in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 h-100 " >
                    <div class="card-body shadow d-flex flex-column mb-2" style="height: 100%;">
                        <h5 class="card-title">@blog.Title</h5>
                        <p class="card-author d-flex justify-content-end">@blog.AuthorName</p>
                        <p class="card-description text-truncate" style="flex-grow: 1;">@Html.Raw(blog.Description)</p>
                        <div class="mt-auto">
                            <a asp-controller="MyBlog" asp-action="ReadBlogs" asp-route-id="@blog.Id" class="btn btn-primary"><i class="bi bi-book"></i> Read</a>
                            <a asp-controller="MyBlog" asp-action="EditAddBlogs" asp-route-id="@blog.Id" class="btn btn-secondary"><i class="bi bi-pencil-square"></i> Edit</a>
                            <form asp-action="Delete" asp-route-id="@blog.Id" method="post" class="d-inline">
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?')"><i class="bi bi-trash3"></i> Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .card-body {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: 100%;
    }

    .card-description {
        overflow: hidden;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
    }

    .card {
       
        height: 25%; 
    }
</style>


