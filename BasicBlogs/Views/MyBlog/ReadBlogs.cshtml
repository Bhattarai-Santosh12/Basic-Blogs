@model List<BasicBlogs.Models.MyBlog>

<div class="container">
    <div class="d-flex justify-content-end mb-4">
        <a class="btn btn-success" asp-controller="MyBlog" asp-action="CreateAddBlogs"><i class="bi bi-plus-circle"></i> Create New Blog</a>
    </div>

    <div class="row">
        @foreach (var blog in Model)
        {
            <div class="col-lg-4 mb-3">
                <div class="card mb-4 h-100 shadow-sm">
                    @* <img src="https://www.freepnglogos.com/uploads/notebook-png/notebook-laptop-png-images-you-can-download-mashtrelo-14.png" class="card-img-top" alt="Notebook"> *@
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@blog.Title</h5>
                        <p class="card-author d-flex justify-content-end">@blog.AuthorName</p>
                        <p class="card-author d-flex justify-content-end font-italic">@blog.PublishDate</p>
                        @* <p class="card-description">@Html.Raw(blog.Description)</p> *@
                        <div class="mt-auto">
                            <a asp-controller="MyBlog" asp-action="ReadBlogs" asp-route-id="@blog.Id" class="btn btn-primary col-lg-3"><i class="fa-sharp fa-solid fa-book-open-reader"></i></a>
                            <a asp-controller="MyBlog" asp-action="EditAddBlogs" asp-route-id="@blog.Id" class="btn btn-warning col-lg-3"><i class="fa-sharp fa-solid fa-pen-to-square"></i> </a>
                            <form asp-action="Delete" asp-route-id="@blog.Id" method="post" class="d-inline">
                                <button type="submit" class="btn btn-danger col-lg-3" onclick="return confirm('Are you sure you want to delete this item?')"><i class="fa-solid fa-trash"></i></button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

