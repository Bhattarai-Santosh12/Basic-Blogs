<div class="container">
    <div class="d-flex justify-content-end mb-4">
        <a class="btn btn-success" asp-controller="MyBlog" asp-action="CreateAddBlogs"><i class="bi bi-plus-circle"></i> Create New Blog</a>
    </div>

    <div class="row">
        @foreach (var blog in Model)
        {
            <div class="col-lg-4 mb-3">
                <div class="card mb-4 h-100 shadow-sm">

                    <div class="d-flex justify-content-center align-items-center" style="width: 100%; height: 200px; overflow: hidden;">
                        <img src="/image/@blog.ImagePath" style="width: 100%; height: 100%; object-fit:fill; overflow" />
                    </div>


                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@blog.Title</h5>
                        <p class="card-author d-flex justify-content-end">@blog.AuthorName</p>
                        <p class="card-author d-flex justify-content-end font-italic">@blog.PublishDate.ToShortDateString()</p>
                        <div class="mt-auto">

                            <a asp-controller="MyBlog" asp-action="ViewBlogs" asp-route-id="@blog.Id" class="btn btn-primary col-lg-3"><i class="fa-sharp fa-solid fa-book-open-reader"></i></a>
                            <a asp-controller="MyBlog" asp-action="EditAddBlogs" asp-route-id="@blog.Id" class="btn btn-warning col-lg-3"><i class="fa-sharp fa-solid fa-pen-to-square"></i></a>
                            <form asp-action="Delete" asp-route-id="@blog.Id" method="post" class="d-inline">
                                <button type="submit" class="btn btn-danger col-lg-3" onclick="return confirm('Are you sure you want to delete this item?')"><i class="fa-solid fa-trash"></i></button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
