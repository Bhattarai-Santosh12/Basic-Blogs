@model List<BasicBlogs.Models.MyBlogs>

@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<nav class="navbar navbar-expand-lg navbar-light bg-warning mb-4 shadow-sm">
    <div class="container">
        <a class="navbar-brand" href="#">BasicBlogs</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
       @*  <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="#">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Contact</a>
                </li>
            </ul>
        </div> *@
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a class="btn btn-primary" asp-controller="UserAccount" asp-action="Login"><i class="fa-solid fa-arrow-left"></i> Logout</a>
            </li>
        </ul>
    </div>
</nav>

<section class="container">
    <div class="row">
        @foreach (var blog in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 shadow-sm" style="border-radius: 10px;">
                    <div class="d-flex justify-content-center align-items-center mt-2" style="width: 100%; height: 200px; overflow: hidden; border-top-left-radius: 10px; border-top-right-radius: 10px;">
                        <img src="@Url.Content("~/images/" + blog.ImagePath)" style="width: 100%; height: 100%; object-fit: cover;" />
                    </div>

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-center font-weight-bold">@blog.Title</h5>
                        <p class="text-muted d-flex justify-content-end">@blog.AuthorName</p>
                        <p class="text-muted d-flex justify-content-end font-italic">@blog.PublishDate.ToShortDateString()</p>
                        <div class="mt-auto d-flex justify-content-center">
                            <a asp-controller="MyBlogsUserPannel" asp-action="ReadBlogsUserPannel" asp-route-id="@blog.Id" class="btn btn-primary"><i class="fa-sharp fa-solid fa-book-open-reader"></i> Read</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
